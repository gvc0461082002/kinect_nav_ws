<launch>

    <arg name="global_frame" default="odom"/>
    <arg name="robot_base_frame" default="base_link"/>
    <arg name="laserscan_frame" />
    <arg name="laserscan_topic" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

        <rosparam file="$(find kinect_nav)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find kinect_nav)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <rosparam file="$(find kinect_nav)/params/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find kinect_nav)/params/global_costmap_params.yaml" command="load" />

        <rosparam file="$(find kinect_nav)/params/base_local_planner_params.yaml" command="load" />
        <rosparam file="$(find kinect_nav)/params/move_base_params.yaml" command="load" />

        <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
        
        <param name="local_costmap/global_frame" value="$(arg global_frame)"/>
        <param name="local_costmap/robot_base_frame" value="$(arg robot_base_frame)"/>
        <param name="global_costmap/global_frame" value="$(arg global_frame)"/>
        <param name="global_costmap/robot_base_frame" value="$(arg robot_base_frame)"/>

        <param name="global_costmap/obstacles_layer/scan/sensor_frame" value="$(arg laserscan_frame)"/>
        <param name="local_costmap/obstacles_layer/scan/sensor_frame" value="$(arg laserscan_frame)"/>
        <param name="global_costmap/obstacles_layer/scan/topic" value="$(arg laserscan_topic)"/>
        <param name="local_costmap/obstacles_layer/scan/topic" value="$(arg laserscan_topic)"/>

    </node>

</launch>
